<h1><%=getLongName('table_name','route_expenses')%>一覧</h1>

<div class="pagenate">
<%= @route_expense_pages.current.previous ? link_to('前のページ', { :page => @route_expense_pages.current.previous }) : '前のページ' %>
<%= @route_expense_pages.current.next ? link_to('次のページ', { :page => @route_expense_pages.current.next }) : '次のページ' %> 
</div>

<table class="list_table">
  <tr>
  <% for column in RouteExpense.columns %>
    <% if system_column?(column.name) then next end %>
    <th><%=getShortName('route_expenses', column.name)%></th>
  <% end %>
    <th></th>
  </tr>
  
<% for route_expense in @route_expenses %>
  <tr>
  <% for column in RouteExpense.columns %>
    <% if system_column?(column.name) then next end %>
    <td><%=h route_expense.send(column.name) %></td>
  <% end %>
    <td>
      <%= link_to '表示', :action => 'show', :id => route_expense %>, 
      <%= link_to '変更', :action => 'edit', :id => route_expense %>, 
      <%= link_to '削除', { :action => 'destroy', :id => route_expense }, :confirm => 'この情報を削除します。よろしいですか?', :method => :post %>
    </td>
  </tr>
<% end %>
</table>

<br/>
<div class="pagenate">
<%= @route_expense_pages.current.previous ? link_to('前のページ', { :page => @route_expense_pages.current.previous }) : '前のページ' %>
<%= @route_expense_pages.current.next ? link_to('次のページ', { :page => @route_expense_pages.current.next }) : '次のページ' %> 
</div>

