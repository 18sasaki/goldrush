<% if @holiday_application.working_type == 'on_holiday_working' %>
<h1>休日出勤申請表示</h1>
<% else %>
<h1><%=getLongName('table_name','holiday_applications')%>表示</h1>
<% end %>

<table class="show_table">

<tr>
    <th><%= '申請区分' %></th>
    <td><%=h @holiday_application.working_type_long_name %></td>
  </tr>
  <tr>
    <th><%=getLongName('holiday_applications','application_date')%></th>
    <td><%=h @holiday_application.application_date.to_date if @holiday_application.application_date != nil %></td>
  </tr>
  <tr>
    <th><%=getLongName('holiday_applications','start_date')%></th>
    <td><%=h @holiday_application.start_date.to_date if @holiday_application.start_date != nil %></td>
  </tr>
  <tr>
    <th><%=getLongName('holiday_applications','end_date')%></th>
    <td><%=h @holiday_application.end_date.to_date if @holiday_application.end_date != nil %></td>
  </tr>
  <tr>
    <th><%=getLongName('holiday_applications','day_total')%></th>
    <td><%=h @holiday_application.day_total %>日</td>
  </tr>
  <tr>
    <th><%=getLongName('holiday_applications','reason')%></th>
    <td><%= @holiday_application.reason %></td>
  </tr>
  <tr>
    <th><%=getLongName('holiday_applications','content')%></th>
    <td><%= simple_format h(@holiday_application.content) %></td>
  </tr>
</table>
<br/>

<% @read_only = @holiday_application.monthly_working_applicated? %>
<%= render :partial => 'base_application/application', :locals => {:application => @holiday_application} %>
