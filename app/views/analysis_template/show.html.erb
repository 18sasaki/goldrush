<%= accordion_around(getLongName('table_name','analysis_templates')+"詳細", "") do %>
<table class="show_table">
<tr>
  <th><%= getLongName('analysis_templates', 'analysis_template_name') %></th>
  <td><%=h @analysis_template.analysis_template_name %></td>
</tr>
<tr>
  <th><%= getLongName('analysis_templates', 'analysis_template_type') %></th>
  <td><%=h @analysis_template.analysis_template_type_name %></td>
</tr>
<tr>
  <th><%= getLongName('business_partners', 'business_partner_name') %></th>
  <td><%=h @analysis_template.business_partner.business_partner_name if @analysis_template.business_partner %></td>
</tr>
<tr>
  <th><%= getLongName('bp_pics', 'bp_pic_name') %></th>
  <td><%=h @analysis_template.bp_pic.bp_pic_name if @analysis_template.bp_pic %></td>
</tr>

<tr>
  <th><%= getLongName('analysis_templates', 'memo') %></th><td><%= simple_format h(@analysis_template.memo) %></td>
</tr>

</table>
<% end %>
<div class="submit_box">
<%= back_to_link_popup_mode '編集', {:action => 'edit', :id => @analysis_template}, btn_primary %>
<%= delete_to '削除',@analysis_template, 'destroy', btn_primary%>
<%= link_or_back '戻る', :action => 'list' %><br/>
</div>
<div class="submit_box">
<%= back_to_link_popup_mode (getLongName('table_name','analysis_template_items')+'の追加'), {:controller => :analysis_template_item, :action => 'new', :id => @analysis_template}, btn_primary %>
</div>

<p></p>

<!-- 解析項目 -->
<h2><%=getLongName('table_name','analysis_template_items')%>情報</h2>
<%= render :partial => 'analysis_template_item/list' %>



