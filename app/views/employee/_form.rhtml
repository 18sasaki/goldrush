  <td><%= text_field 'employee', 'address2', {:size => '80'}  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','tel2')%></th>
  <td><%= text_field 'employee', 'tel2'  %></td>
</tr>
<tr>
