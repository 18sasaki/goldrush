  <div id="calDisplay5" onmouseover="flgCal5 = false;" onmouseout="flgCal5 = true;" ></div>
  </td>
</tr>
<tr>
  <th><%=getLongName('employees','memo')%></th>
  <td><%= text_area 'employee', 'memo', :size => '60x10'  %></td>
</tr>
<%- if controller.action_name.match(/edit.*/) -%>
<tr>
  <th><%=getLongName('employees','active_flg')%></th>
  <td><%= check_box 'employee', 'active_flg' %></td>
</tr>
<%- end -%>
