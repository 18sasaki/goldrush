  </td>
</tr>
<% if false %>
<tr>
  <th>添付ファイル２</th>
  <td>
  <%= file_field 'upload', 'file3' %>
  </td>
</tr>
<% end %>
<tr>
  <th><%=getLongName('employees','active_date')%></th>
  <td>
  <input type="text" id="employee_active_date" name="employee[active_date]" value="<%=h @employee.active_date.to_date if @employee.active_date != nil %>" size="15" onClick="cal4.write();" onChange="cal4.getFormValue(); cal4.hide();" onblur="if (flgCal4) {cal4.hide();}">
  <div id="calDisplay4" onmouseover="flgCal4 = false;" onmouseout="flgCal4 = true;" ></div>
  </td>
</tr>
<tr>
  <th><%=getLongName('employees','inactive_date')%></th>
