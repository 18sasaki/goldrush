</tr>
<tr>
  <th><%=getLongName('employees','entry_date')%></th>
  <td>
  <input type="text" id="employee_entry_date" name="employee[entry_date]" value="<%=h @employee.entry_date.to_date if @employee.entry_date != nil %>" size="15" onClick="cal2.write();" onChange="cal2.getFormValue(); cal2.hide();" onblur="if (flgCal2) {cal2.hide();}">
  <div id="calDisplay2" onmouseover="flgCal2 = false;" onmouseout="flgCal2 = true;" ></div>
  </td>
</tr>
<tr>
  <th><%=getLongName('employees','resignation_date')%></th>
  <td>
  <input type="text" id="employee_resignation_date" name="employee[resignation_date]" value="<%=h @employee.resignation_date.to_date if @employee.resignation_date != nil %>" size="15" onClick="cal3.write();" onChange="cal3.getFormValue(); cal3.hide();" onblur="if (flgCal3) {cal3.hide();}">
  <div id="calDisplay3" onmouseover="flgCal3 = false;" onmouseout="flgCal3 = true;" ></div>
  </td>
</tr>
