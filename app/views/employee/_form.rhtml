<%= error_messages_for 'employee' %>


<table class="input_table">
<caption style="font-size:14px"><b>個人情報</b></caption>
<tr>
  <th>ユーザー</th>
  <td><%= collection_select 'employee', 'user_id', @users, 'id', 'login' %></td>
</tr>
<tr>
  <th>部署</th>
  <td><%= collection_select 'employee', 'department_id', @departments, 'id', 'department_name' %></td>
</tr>
<tr>
  <th><%=getLongName('employees','position')%></th>
  <td><%= text_field 'employee', 'position'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','insurance_code')%></th>
  <td><%= text_field 'employee', 'insurance_code'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','employee_name')%></th>
  <td><%= text_field 'employee', 'employee_name'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','employee_kana_name')%></th>
  <td><%= text_field 'employee', 'employee_kana_name'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','birthday_date')%></th>
  <td>
  <input type="text" id="employee_birthday_date" name="employee[birthday_date]" value="<%=h @employee.birthday_date.to_date if @employee.birthday_date != nil %>" size="15" >
  </td>
</tr>
<tr>
  <th><%=getLongName('employees','sex_type')%></th>
  <td>
  <%= radio_button("employee", "sex_type", 0, :checked => 'checked') %>女性
  <%= radio_button("employee", "sex_type", 1 ) %>男性
  </td>
</tr>
<tr>
  <th><%=getLongName('employees','email')%></th>
  <td><%= text_field 'employee', 'email'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','zip1')%></th>
  <td><%= text_field 'employee', 'zip1'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','address1')%></th>
  <td><%= text_field 'employee', 'address1', {:size => '80'}  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','tel1')%></th>
  <td><%= text_field 'employee', 'tel1'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','fax')%></th>
  <td><%= text_field 'employee', 'fax'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','mobile')%></th>
  <td><%= text_field 'employee', 'mobile'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','mobile_email')%></th>
  <td><%= text_field 'employee', 'mobile_email'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','name2')%></th>
  <td><%= text_field 'employee', 'name2'  %></td>
</tr>
<tr>
  <th><%=getLongName('employees','zip2')%></th>
  <td><%= text_field 'employee', 'zip2'  %></td>
</tr>
