<h1><%=getLongName('table_name','biz_offers')%>新規作成</h1>

<%= form_tag :action => 'create', :business_id => @business do %>
  <%= render :partial => 'form' %>
  <div class="submit_box">
    <%= submit_tag '登録', btn_primary %>
    <% if params[:import_mail_id] && params[:template_id] %>
      <%= link_or_back '解析テンプレート選択に戻る', {:controller => 'analysis_template', :action => 'list'}, btn_default %>
    <% else %>
      <%= link_or_back '戻る', :action => 'list' %>
    <% end %>
  </div>
  <%= popup_hidden_field %>
<% end %>

