<table class="show_table">
<%- for column in Comment.columns -%>
  <%- if system_column?(column.name) then next end -%>
<tr>
  <th><%= getLongName('comments', column.name) %></th><td><%=h @comment.send(column.name) %></td>
</tr>
<% end %>
</table>
<%= link_to '編集', :action => 'edit', :id => @comment %> |
<%= link_to '一覧', :action => 'list' %>
