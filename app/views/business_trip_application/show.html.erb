<h1><%=getLongName('table_name','business_trip_applications')%>表示</h1>

<table class="show_table">

<tr>
    <th><%=getLongName('business_trip_applications','application_date')%></th>
    <td><%=h @business_trip_application.application_date.to_date if @business_trip_application.application_date != nil %></td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','start_date')%></th>
    <td><%=h @business_trip_application.start_date.to_date if @business_trip_application.start_date != nil %></td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','end_date')%></th>
    <td><%=h @business_trip_application.end_date.to_date if @business_trip_application.end_date != nil %></td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','day_total')%></th>
    <td><%=h @business_trip_application.day_total.to_i %></td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','book_no')%></th>
    <td><%=h @business_trip_application.book_no %></td>
  </tr>
  <tr>
    <th>営業担当</th>
    <td><%=h @business_trip_application.sales_person_name %></td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','reason')%></th>
    <td><%=h @business_trip_application.reason %></td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','content')%></th>
    <td><%= simple_format @business_trip_application.content %></td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','location')%></th>
    <td><%=h @business_trip_application.location %></td>
  </tr>


</table>

<% @read_only = @business_trip_application.monthly_working_applicated? %>
<%= render :partial => 'base_application/application', :locals => {:application => @business_trip_application} %>
