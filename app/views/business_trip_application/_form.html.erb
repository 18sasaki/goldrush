<%= error_messages_for 'business_trip_application' %>


<table class="input_table">
  <tr>
    <th><%=getLongName('business_trip_applications','application_date')%></th>
    <td>
    <%=h @business_trip_application.application_date.to_date if @business_trip_application.application_date != nil %>
    </td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','start_date')%></th>
    <td>
      <%= edit? ? @business_trip_application.start_date : date_field('business_trip_application', 'start_date') %>
    </td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','end_date')%></th>
    <td>
      <%= edit? ? @business_trip_application.end_date : date_field('business_trip_application', 'end_date') %>
    </td>
  </tr>
  <% if false %>
  <tr>
    <th><%=getLongName('business_trip_applications','day_total')%></th>
    <td>
    <%= text_field 'business_trip_application', 'day_total' %>
    </td>
  </tr>
  <% end %>
  <tr>
    <th><%=getLongName('business_trip_applications','book_no')%></th>
    <td><%= text_field 'business_trip_application', 'book_no' %></td>
  </tr>
  <% if edit? && @business_trip_application.sales_person_id %>
  <tr>
    <th style="background-color: pink;">営業担当</th><td><%=h User.find(@business_trip_application.sales_person_id).employee.employee_name%></td>
  </tr>
  <% elsif @sales_persons %>
  <tr>
    <th style="background-color: pink;">営業担当</th><td><%= select 'business_trip_application', 'sales_person', @sales_persons %></td>
  </tr>
  <% end %>
    <tr>
      <th><%=getLongName('business_trip_applications','reason')%></th>
      <td>
      <%= text_field 'business_trip_application', 'reason', :size => 80 %>
      </td>
    </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','content')%></th>
    <td>
    <%= text_area 'business_trip_application', 'content', :size => '60x10' %>
    </td>
  </tr>
  <tr>
    <th><%=getLongName('business_trip_applications','location')%></th>
    <td>
    <%= text_field 'business_trip_application', 'location' %>
    </td>
  </tr>
<% if false %>
  <tr>
    <th><%=getLongName('business_trip_applications','client')%></th>
    <td>
    <%= text_field 'business_trip_application', 'client' %>
    </td>
  </tr>
<% end %>
<% if false %>
  <tr>
    <th><%=getLongName('business_trip_applications','approximate_amount')%></th>
    <td>
    <%= text_field 'business_trip_application', 'approximate_amount' %>
    </td>
  </tr>
<% end %>
</table>

<%= hidden_field 'business_trip_application', 'lock_version' %>
<%= hidden_field 'business_trip_application', 'application_date' %>


