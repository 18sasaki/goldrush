<% unless session[:return_to] =~ /popup=1/ %>

<div>
<h1>ログイン</h1>
</div>
<% end %>
<div id="login_div">
<div id="login_form">
<%-
  opt = Hash.new
  opt[:only_path] = false
  opt[:protocol] = 'https://' if ENV['HTTPS_ENABLED']
  form_tag opt do 
-%>
<p><label for="login"><%=_("User|Login")%></label><br/>
<%= text_field_tag 'login', nil, :size => 40, :class => 'input_tag' %></p>

<p><label for="password"><%=_("User|Crypted password")%></label><br/>
<%= password_field_tag 'password', nil, :size => 40, :class => 'input_tag' %></p>

<p style="text-align: left;"><%= check_box_tag 'remember_me' %> <label style="" for="remember_me"><%=_('Remember me')%></label>
</p>

<%= request.env['HTTPS'] == 'on' ? hidden_field_tag('https', 'on') : '' %>
<p><%= submit_tag _('Login') %></p>
<% end -%>
</div>
