<div class="list-group">
<% @remarks.each do |remark| %>
  <div class="list-group-item">
    <div class="list-group-item-heading remark_header"><%= remark.get_created_user.employee.employee_name %><br>
      <%= label_tag 'create_name', _time_long(remark.created_at) %> 
      <%= show_rate_stars remark.rating %>
    </div>
    <p class="list-group-item-text"><%= simple_format remark.remark_content %></p>
  </div>
  <% if remark.created_user == current_user.login %>
    <div class="btn-group btn-group-xs">
    <%= back_to_link '　編　集　', {:controller => :remarks, :action => :edit, :id => remark.id}, {:class => "btn btn-primary"}  %> <%= link_to '　削　除　',url_for(:controller => :remarks, :action => :destroy, :authenticity_token => form_authenticity_token, :id => remark.id, :back => remark_key, :bk_id => params[:id]), {:class => "btn btn-default", :method => :delete} %>
  </div>
  <% end %>
<% end %>
</div>
