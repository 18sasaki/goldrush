<h1><%= @project.project_name %></h1>

<table class="list_table">
  <tr>
    <th><%= @project.project_start_date.to_date.year%>年</th>
    <% @project.base_months.each do |base_month| %>
      <th><%= base_month.end_date.to_date.month %>月</th>
    <% end %>
    <th>合計</th>
  </tr>
<% month_sum = Hash.new%>
<% total_sum = 0 %>
<% for member in @project.members %>
  <% member_sum = 0 %>
  <tr>
    <td><%=h member.employee.employee_short_name %></td>
    <% @project.base_months.each do |base_month| %>
      <td><%=h @map[member.id][base_month.id]  %></td>
    <% end %>
    <td><%= @sum_member[member.id] %></td>
  </tr>
<% end %>
  <td>合計</td>
  <% @project.base_months.each do |base_month| %>
    <td><%=h @sum_month[base_month.id] %></td>
  <% end %>
  <td><%=h @sum_total %></td>
</table>
