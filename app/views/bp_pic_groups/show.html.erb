<h1><%= @bp_pic_group.bp_pic_group_name %> 詳細</h1>

<% if @called_by_delivery_mail_create %>
  <%= form_tag({:action => :add_details}, {:method => :post}) do %>
  <table class="show_table">
    <tr>
      <th></th>
      <th><%= getLongName('business_partners', 'business_partner_name') %></th>
      <th><%= getLongName('bp_pics', 'bp_pic_name') %></th>
    </tr>
    <% @bp_pic_names.each do |bp_pic_name| %>
    <tr>
      <td><%= check_box_tag 'bp_pics[]', bp_pic_name[3], true %></td>
      <!-- 0:取引先名 1:担当者名 2:取引先id 3:担当者id -->
      <td><%= link_to bp_pic_name[0], :controller => :business_partner, :action => :show, :id => bp_pic_name[2] %></td>
      <td><%= link_to bp_pic_name[1], :controller => :bp_pic, :action => :show, :id => bp_pic_name[3] %></td>
    </tr>
    <% end %>
  </table>
  <%= hidden_field_tag 'delivery_mail_id', @delivery_mail_id %>
  <%= submit_tag "メール作成" %>
  <% end %>
<% else %>
  <table class="show_table">
    <tr>
      <th><%= getLongName('business_partners', 'business_partner_name') %></th>
      <th><%= getLongName('bp_pics', 'bp_pic_name') %></th>
    </tr>
    <% @bp_pic_names.each do |bp_pic_name| %>
    <tr>
      <!-- 0:取引先名 1:担当者名 2:取引先id 3:担当者id -->
      <td><%= link_to bp_pic_name[0], :controller => :business_partner, :action => :show, :id => bp_pic_name[2] %></td>
      <td><%= link_to bp_pic_name[1], :controller => :bp_pic, :action => :show, :id => bp_pic_name[3] %></td>
    </tr>
    <% end %>
  </table>
<% end %>

<%= back_to_link '編集', edit_bp_pic_group_path(@bp_pic_group) %> |
<%= link_to '削除', @bp_pic_group, method: :delete, data: { confirm: '削除します。よろしいですか?' } %> |
<%= link_or_back '戻る', bp_pic_groups_path %>